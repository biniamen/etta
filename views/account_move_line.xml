<odoo>
    <record id="view_account_move_form_inherit_service_charge" model="ir.ui.view">
        <field name="name">account.move.form.inherit.service.charge</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Extend the Tree View of Invoice Lines to include the service_charge field after discount -->
            <xpath expr="//page[@id='invoice_tab']//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                <field name="service_charge"/>
            </xpath>
            <!-- Extend the Form View of Invoice Lines to include the service_charge field after discount -->
            <xpath expr="//page[@id='invoice_tab']//field[@name='invoice_line_ids']/form//field[@name='discount']" position="after">
                <field name="service_charge"/>
            </xpath>
        </field>
    </record>
</odoo>
